<div class="container">
  <%= simple_form_for @dog do |f| %>
    <%= f.input :name, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
    <%= f.input :description, as: :text, input_html: { class: 'form-control', rows: 6 }, wrapper_html: { class: 'form-group' } %>
    <%= f.button :submit, data: { disable_with: 'Submiting...' } %>
  <% end %>
</div>