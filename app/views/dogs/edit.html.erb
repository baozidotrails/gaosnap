<div class="container">
  <%= simple_form_for @dog  do |f| %>
    <%= f.input :name, input_html: { class: 'form-control' }, wrapper_html: { class: 'from-group' } %>
    <%= f.input :description, as: :text, input_html: { class: 'form-control', rows: 6 }, wrapper_html: { class: 'from-group' } %>
    <%= f.button :submit, disable_with: 'Submiting...' %>
  <% end %>
</div>