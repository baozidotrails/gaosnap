<div class="container">
  <%= simple_form_for [@dog, @story] do |f| %>
    <%= f.input :title, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
    <%= f.input :content, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
    <%= f.button :submit, data: { disable_with: 'Submiting...' } %>
  <% end %>
</div>